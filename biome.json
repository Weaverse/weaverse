{
  "root": true,
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite", "./packages/biome/biome.json"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main",
    "root": "."
  },
  "files": {
    "includes": [
      "**",
      "!**/dist",
      "!**/build",
      "!**/.turbo",
      "!**/templates",
      "!**/package-lock.json",
      "!**/app/styles/app.css"
    ]
  },
  "linter": {
    "rules": {
      "style": {},
      "suspicious": {
        "noConsole": "off"
      },
      "correctness": {},
      "complexity": {
        "noExcessiveLinesPerFunction": "off"
      },
      "nursery": {}
    }
  }
}
