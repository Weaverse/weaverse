{
  "root": true,
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "extends": [
    "ultracite/core",
    "ultracite/react",
    "ultracite/remix",
    "./packages/biome/biome.json"
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main",
    "root": "."
  },
  "files": {
    "includes": [
      "**",
      "!**/dist",
      "!**/build",
      "!**/.turbo",
      "!**/templates",
      "!**/package-lock.json",
      "!**/app/styles/app.css",
      "!**/packages/biome"
    ]
  },
  "linter": {
    "rules": {
      "style": {},
      "suspicious": {
        "noConsole": "off"
      },
      "correctness": {},
      "complexity": {},
      "nursery": {}
    }
  }
}
