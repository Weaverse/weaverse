{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.6/schema.json",
  "extends": ["./packages/biome/biome.json"],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main",
    "root": "."
  },
  "files": {
    "includes": [
      "**",
      "!**/dist/**",
      "!**/build/**",
      "!**/.turbo/**",
      "!**/templates/**",
      "!**/package-lock.json"
    ]
  },
  "linter": {
    "rules": {
      "style": {},
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
