{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "style": {
        "useConst": "off",
        "noExportedImports": "warn",
        "useBlockStatements": "warn",
        "noNestedTernary": "warn",
        "useConsistentMemberAccessibility": "warn",
        "noParameterAssign": "warn",
        "useDefaultSwitchClause": "warn",
        "useConsistentBuiltinInstantiation": "warn",
        "useFilenamingConvention": "warn",
        "useConsistentArrayType": "warn",
        "useShorthandAssign": "warn",
        "useForOf": "warn",
        "noNonNullAssertion": "warn",
        "useTemplate": "warn",
        "useAtIndex": "warn",
        "useCollapsedIf": "warn",
        "useCollapsedElseIf": "warn",
        "noParameterProperties": "warn",
        "noMagicNumbers": "warn",
        "useReadonlyClassProperties": "warn"
      },
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off",
        "useAriaPropsSupportedByRole": "warn",
        "noSvgWithoutTitle": "off",
        "useButtonType": "warn",
        "useSemanticElements": "warn",
        "useFocusableInteractive": "warn",
        "noLabelWithoutControl": "warn",
        "useKeyWithMouseEvents": "warn",
        "noRedundantAlt": "warn",
        "noNoninteractiveElementInteractions": "warn"
      },
      "complexity": {
        "useOptionalChain": "warn",
        "useLiteralKeys": "warn",
        "noForEach": "warn",
        "noExcessiveCognitiveComplexity": "warn",
        "noStaticOnlyClass": "off",
        "noUselessCatch": "warn",
        "noVoid": "warn",
        "noImplicitCoercions": "warn",
        "noExcessiveLinesPerFunction": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "warn",
        "noImplicitAnyLet": "warn",
        "noConsole": "warn",
        "noEvolvingTypes": "warn",
        "noExplicitAny": "warn",
        "useAwait": "warn",
        "noTemplateCurlyInString": "warn",
        "noEmptyBlockStatements": "warn",
        "noDocumentCookie": "warn",
        "noConstantBinaryExpressions": "warn",
        "useIterableCallbackReturn": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "warn",
        "useExhaustiveDependencies": "warn",
        "noChildrenProp": "warn",
        "noUnusedVariables": "warn",
        "noUnusedImports": "warn",
        "noUnusedFunctionParameters": "warn",
        "noInvalidUseBeforeDeclaration": "warn",
        "useParseIntRadix": "warn"
      },
      "nursery": {
        "noShadow": "warn",
        "useSortedClasses": "off",
        "useConsistentTypeDefinitions": "warn",
        "noUnnecessaryConditions": "warn",
        "useImageSize": "warn",
        "noUnusedExpressions": "warn",
        "noReactForwardRef": "warn"
      },
      "performance": {
        "noNamespaceImport": "warn",
        "useTopLevelRegex": "warn",
        "noImgElement": "warn",
        "noDynamicNamespaceImportAccess": "warn",
        "noDelete": "warn",
        "noBarrelFile": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/public",
      "!**/.wrangler",
      "!**/icons",
      "!**/patches",
      "!**/*.css",
      "!**/*.scss",
      "!**/storefront-api.generated.d.ts",
      "!**/customer-account-api.generated.d.ts",
      "!**/.shopify",
      "!**/.react-router",
      "!**/app/styles/app.css",
      "!**/app/utils/string-parser.ts",
      "!**/app/hooks/use-3rd-stuff.ts",
      "!**/pnpm-lock.yaml",
      "!**/.vscode",
      "!**/prisma",
      "!**/vite.config.ts",
      "!**/app/styles/tailwind.css"
    ],
    "maxSize": 512000
  }
}
