{
  "root": false,
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "extends": ["ultracite"],
  "linter": {
    "rules": {
      "style": {
        "useConst": "off",
        "noExportedImports": "warn",
        "useBlockStatements": "warn",
        "noNestedTernary": "warn",
        "useConsistentMemberAccessibility": "warn",
        "noParameterAssign": "warn",
        "useDefaultSwitchClause": "warn",
        "useConsistentBuiltinInstantiation": "warn",
        "useFilenamingConvention": "warn",
        "useConsistentArrayType": "warn"
      },
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off",
        "useAriaPropsSupportedByRole": "warn",
        "noSvgWithoutTitle": "off",
        "useButtonType": "warn",
        "useSemanticElements": "warn",
        "useFocusableInteractive": "warn",
        "noLabelWithoutControl": "warn",
        "useKeyWithMouseEvents": "warn"
      },
      "complexity": {
        "useOptionalChain": "warn",
        "useLiteralKeys": "warn",
        "noForEach": "warn",
        "noExcessiveCognitiveComplexity": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "warn",
        "noImplicitAnyLet": "warn",
        "noConsole": "warn",
        "noEvolvingTypes": "warn",
        "noExplicitAny": "warn",
        "useAwait": "warn",
        "noTemplateCurlyInString": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "warn",
        "useExhaustiveDependencies": "warn",
        "noChildrenProp": "warn",
        "noUnusedVariables": "warn"
      },
      "nursery": {
        "useUniqueElementIds": "warn",
        "noShadow": "warn",
        "useJsonImportAttribute": "off",
        "useParseIntRadix": "warn",
        "noConstantBinaryExpression": "warn",
        "noNoninteractiveElementInteractions": "warn",
        "useIterableCallbackReturn": "warn",
        "noAwaitInLoop": "warn"
      },
      "performance": {
        "noNamespaceImport": "warn",
        "useTopLevelRegex": "warn",
        "noImgElement": "warn",
        "noDynamicNamespaceImportAccess": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "files": {
    "ignoreUnknown": true
  }
}
