{
  "name": "@weaverse/i18n",
  "version": "1.1.0",
  "description": "i18n utilities for Weaverse Hydrogen themes with waterfall fallback",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "@weaverse:registry": "https://registry.npmjs.org"
  },
  "repository": {
    "url": "git+https://github.com/Weaverse/weaverse.git",
    "directory": "packages/i18n"
  },
  "files": [
    "dist/*"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/server.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "clean": true,
    "outDir": "dist",
    "treeshake": true
  },
  "dependencies": {
    "i18next-chained-backend": "^4.6.2",
    "i18next-http-backend": "^3.0.2",
    "i18next-resources-to-backend": "^1.2.1"
  },
  "peerDependencies": {
    "i18next": "^25.8.4",
    "react": ">=18.0.0",
    "react-i18next": "^16.5.4"
  },
  "devDependencies": {
    "@types/react": "^19.2.13",
    "vitest": "^2.0.0"
  }
}
