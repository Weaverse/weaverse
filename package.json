{
  "name": "root",
  "private": true,
  "devDependencies": {
    "turbo": "*"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev2": "turbo run dev --no-cache",
    "test": "turbo run test",
    "build": "turbo run build --graph=repo-graph.svg"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "test": {
        "outputs": []
      },
      "dev": {
        "cache": false,
        "outputs": [
          "dist/**"
        ]
      }
    }
  }
}
