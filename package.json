{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.31",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^6.7.0",
    "turbo": "^1.8.6",
    "typescript": "^5.0.2"
  },
  "scripts": {
    "dev": "turbo run dev --no-cache",
    "up": "bash ./upgrade.sh",
    "test": "turbo run test",
    "build": "turbo run build",
    "build:graph": "turbo run build --graph=repo-graph.svg",
    "prepare": "turbo run build",
    "preprepare": "husky install",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix"
  },
  "workspaces": [
    "packages/core",
    "packages/react",
    "packages/shopify",
    "packages/hydrogen"
  ],
  "packageManager": "npm@8.1.2",
  "version": "0.0.3",
  "prettier": {
    "semi": false,
    "bracketSpacing": true,
    "importOrder": [
      "^@(.*)/(.*)$",
      "^~/(.*)$",
      "^[./]"
    ]
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,yml,json}": [
      "prettier --write --ignore-unknown",
      "nr lint:fix"
    ]
  }
}
