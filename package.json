{
  "name": "weaverse-sdks",
  "version": "2.0.1",
  "description": "Weaverse SDKs monorepo.",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "npm run dev:pkg -- --filter=./templates/pilot",
    "dev:pkg": "cross-env LOCAL_DEV=true turbo dev --no-daemon --parallel --filter=./packages/*",
    "clean": "bash ./scripts/clean.sh",
    "up": "bash ./scripts/upgrade-packages.sh",
    "update-deps": "bash ./scripts/update-deps.sh",
    "test": "turbo run test",
    "build": "turbo run build --no-daemon",
    "build:graph": "turbo run build --graph=repo-graph.svg",
    "prepare": "npm run build",
    "preprepare": "husky install",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "typecheck": "tsc --noEmit packages",
    "clean-all": "rimraf node_modules/.bin && rimraf node_modules/.cache && rimraf packages/core/dist && rimraf packages/hydrogen/dist && rimraf packages/react/dist && rimraf templates/pilot/.cache"
  },
  "workspaces": [
    "templates/pilot",
    "packages/core",
    "packages/react",
    "packages/shopify",
    "packages/hydrogen"
  ],
  "devDependencies": {
    "@types/node": "^20.8.2",
    "@types/react": "^18.2.24",
    "@types/react-dom": "18.2.8",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "cross-env": "^7.0.3",
    "eslint": "8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "turbo": "1.10.14",
    "typescript": "^5.2.2"
  },
  "optionalDependencies": {
    "@esbuild/darwin-x64": "^0.19.4",
    "turbo-darwin-arm64": "^1.10.14"
  },
  "engines": {
    "node": ">=16.13"
  },
  "prettier": {
    "semi": false,
    "bracketSpacing": true,
    "importOrder": [
      "^@(.*)/(.*)$",
      "^~/(.*)$",
      "^[./]"
    ]
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,yml,json}": [
      "prettier --write --ignore-unknown",
      "nr lint:fix"
    ]
  }
}
