{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "strict": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "include": ["packages/*/src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".turbo",
    "templates",
    "scripts",
    "packages/*/dist",
    "packages/*/build",
    "packages/*/.turbo"
  ]
}
